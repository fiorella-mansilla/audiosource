{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended", // Add React rules
    "plugin:react-hooks/recommended" // Add React Hooks rules
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true // Enable JSX parsing
    }
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect React version
    }
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".jsx"] }],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off", // Disable if not using prop-types
    "no-unused-vars": "warn" // Warn about unused variables (optional)
  }
}